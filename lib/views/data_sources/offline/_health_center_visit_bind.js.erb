<% %w(non_visit_reason notes other_non_visit_reason visit_month visited vehicle_id).each do |field| %>
$('#<%= field %>').linkFrom('val', data, '<%= field %>').linkTo('val', data, '<%= field %>');
<% end %>
$('#visited_at').linkFrom('val', data, 'visited_at', olmis_localize_date);
$('#visited_at').linkTo('val', data, 'visited_at', olmis_delocalize_date);
$(data).attrChange('visited_at',       function(ev) { update_visit_history({ 'visit': ev.newValue }); });
$(data).attrChange('non_visit_reason', function(ev) { update_visit_history({ 'visit': ev.newValue }); });

