      <group>
        <label><%= t("visits.health_center_monthly_tasks.equipment") %></label>
        <input bind="equipment_status_intro">
          <label><%= t(".equipment_status_intro.label") %></label>
          <hint><%= t(".equipment_status_intro.hint") %></hint>
        </input>

        <%- EquipmentType.active.sort.each do |type|
            id = "equipment_status_#{type.code}" -%>
          <group>
            <select1 bind="<%= id %>:present">
              <label><%= type.label %>, <%= t("visits.health_center_equipment.present") %></label>
              <%- [ [ t("yes"), "true" ], [ t("no"), "false" ] ].each do |label,value| -%>
                <item>
                  <label><%= label %></label>
                  <value><%= value %></value>
                </item>
              <%- end -%>
            </select1>
            <select1 bind="<%= id %>:working">
              <label><%= type.label %>, <%= t("visits.health_center_equipment.working") %></label>
              <%- [ [ t("yes"), "true" ], [ t("no"), "false" ] ].each do |label,value| -%>
                <item>
                  <label><%= label %></label>
                  <value><%= value %></value>
                </item>
              <%- end -%>
            </select1>
          </group>
        <%- end -%>
      </group>

